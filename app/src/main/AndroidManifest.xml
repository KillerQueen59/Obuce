    package="com.ojanbelajar.obuce">

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Obuce">
        <activity
            android:name=".ui.tab.home.food.scan.ScanResultActivity"
            android:exported="true" />
        <activity
            android:name=".ui.tab.home.food.scan.HowToScanActivity"
            android:exported="true" />
        <activity
            android:name=".ui.tab.home.workout.WorkoutCompletedActivity"
            android:exported="true" />
        <activity
            android:name=".ui.tab.home.workout.WorkoutActivity"
            android:exported="true" />
        <activity
            android:name=".ui.tab.home.workout.ListWorkoutActivity"
            android:exported="true" />
        <activity
            android:name=".ui.tab.home.food.FoodRecommendationActivity"
            android:exported="true" />
        <activity
            android:name=".ui.tab.home.workout.WorkoutMethodeActivity"
            android:exported="true" />
        <activity
            android:name=".ui.tab.home.food.ListFoodActivity"
            android:exported="true" />
        <activity
            android:name=".ui.tab.home.food.DetailFoodActivity"
            android:exported="true" />
        <activity android:name=".ui.MainActivity" />
        <activity
            android:name=".ui.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.onboard.OnboardActivity" />
        <activity
            android:name=".ui.getstarted.GetStartedActivity"
            android:theme="@style/Theme.Obuce.Top.White" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/Theme.Obuce.Top.White" />
    </application>

</manifest>