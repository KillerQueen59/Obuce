<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:orientation="vertical"
    tools:context=".ui.tab.statistic.tab.data.DataStatisticFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="376dp"
        android:layout_height="112dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/screenshot_1usecase8"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
    android:layout_width="376dp"
    android:layout_height="112dp"
    app:cardCornerRadius="8dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ps_bold"
                android:text="Weight (kg)"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height (kg)"
                android:layout_marginTop="28dp"
                android:textSize="20sp"
                android:textStyle="normal"
                android:fontFamily="@font/ps"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginLeft="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_weight"
                android:text="86"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:fontFamily="@font/ps_bold"
                android:layout_gravity="end"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_height"
                android:text="163"
                android:layout_marginTop="16dp"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:fontFamily="@font/ps"
                android:layout_gravity="end"/>

        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="376dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_margin="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ps_bold"
                    android:text="Nutrition Needs"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ps"
                    android:text="Calories"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fat (g)"
                    android:layout_marginTop="28dp"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/ps"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbs(g)"
                    android:layout_marginTop="28dp"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/ps"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fiber(g)"
                    android:layout_marginTop="28dp"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/ps"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein(g)"
                    android:layout_marginTop="28dp"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/ps"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginLeft="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_calories"
                    android:text="2000"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:fontFamily="@font/ps_bold"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="end"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_fat"
                    android:text="2"
                    android:layout_marginTop="16dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:fontFamily="@font/ps"
                    android:layout_gravity="end"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_carbs"
                    android:text="15"
                    android:layout_marginTop="16dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:fontFamily="@font/ps"
                    android:layout_gravity="end"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_fiber"
                    android:text="4"
                    android:layout_marginTop="16dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:fontFamily="@font/ps"
                    android:layout_gravity="end"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_protein"
                    android:text="20"
                    android:layout_marginTop="16dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:fontFamily="@font/ps"
                    android:layout_gravity="end"/>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>