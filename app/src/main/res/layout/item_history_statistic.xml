<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:layout_gravity="center_horizontal">

    <com.google.android.material.card.MaterialCardView
        app:cardBackgroundColor="@color/white"
        app:cardElevation="8dp"
        android:layout_width="376dp"
        android:layout_height="112dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/white"
                app:cardElevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="8dp"
                >
                <ImageView
                    android:id="@+id/iv_consumption"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ilustrasio001" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_margin="4dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tv_nameConsume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ps_bold"
                        android:text="Salad Bowl"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_timeLocal"
                        android:text="10:46 AM"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:fontFamily="@font/ps"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_dateMonth"
                        android:text="18 Aug"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:fontFamily="@font/ps"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:layout_marginLeft="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_calorie"
                        android:text="140 cal"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:fontFamily="@font/ps_bold"
                        android:layout_gravity="end"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_composition"
                        android:text="70 cal x 2Pcs"
                        android:layout_marginTop="28dp"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:fontFamily="@font/ps"
                        android:layout_gravity="end"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>